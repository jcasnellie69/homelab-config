[Unit]
Description=MCP Filesystem Server (read-only)
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=root
Group=root
Environment=PYTHONUNBUFFERED=1
ExecStart=/opt/mcp/venv/bin/mcp-server-filesystem \
  --host 127.0.0.1 --port 7320 \
  --read-only \
  /mnt/homelab-config \
  /srv/artifacts
Restart=on-failure
RestartSec=2

[Install]
WantedBy=multi-user.target
